<Page x:Class="QuizTool.UI.SingleAnswerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:QuizTool.UI"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SingleAnswerPage" Loaded="Page_Loaded">

    <Grid>
        <StackPanel Margin="0 0 0 50" Orientation="Vertical">
            <TextBlock x:Name="textBoxQuestion" Foreground="White" FontSize="30"  TextWrapping="Wrap" VerticalAlignment="Top" HorizontalAlignment="Stretch" Margin="10"/>
            <Grid x:Name="gridAnswers" Margin="10" >
                
            </Grid>
        </StackPanel>
        <Button x:Name="buttonExit"  Visibility="Hidden" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="10" Content="Exit" FontSize="20" Width="100" Height="40" Click="buttonExit_Click" />
    </Grid>
</Page>
